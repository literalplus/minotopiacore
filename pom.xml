            <url>https://repo.nowak-at.net/ext-release-local/</url>
        </repository>
        <repository>
            <id>fanciful-repo</id>
            <!-- Fanciful -->
            <url>http://repo.franga2000.com/artifactory/public/</url>
        </repository>
        <repository>
            <id>xxyy-repo</id>
            <!-- xLogin, etc. -->
            <url>https://repo.nowak-at.net/xxyy-private/</url>
